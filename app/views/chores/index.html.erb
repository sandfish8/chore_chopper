<h2>Chores</h2>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @chores.each do |chore| %>
  <tr>
    <td><%=h chore.name %></td>
    <td><%= link_to 'Show', family_chore_path(@current_family, chore) %></td>
    <td><%= link_to 'Edit', edit_family_chore_path(@current_family, chore) %></td>
    <td><%= link_to 'Destroy', family_chore_path(@current_family, chore), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New chore', new_family_chore_path(@current_family) %><br />
<%= link_to 'The Board', root_url %>