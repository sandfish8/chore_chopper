<h1>Login</h1>

<% form_for @family_session, :url => family_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :login, "Login (Family username)" %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %>
<% end %>
