<h1>Listing families</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Login</th>
    <th>Email</th>
    <th>Crypted password</th>
    <th>Password salt</th>
    <th>Persistence token</th>
    <th>Login count</th>
    <th>Failed login count</th>
    <th>Last request at</th>
    <th>Current login at</th>
    <th>Last login at</th>
    <th>Current login ip</th>
    <th>Last login ip</th>
  </tr>

<% @families.each do |family| %>
  <tr>
    <td><%=h family.name %></td>
    <td><%=h family.login %></td>
    <td><%=h family.email %></td>
    <td><%=h family.crypted_password %></td>
    <td><%=h family.password_salt %></td>
    <td><%=h family.persistence_token %></td>
    <td><%=h family.login_count %></td>
    <td><%=h family.failed_login_count %></td>
    <td><%=h family.last_request_at %></td>
    <td><%=h family.current_login_at %></td>
    <td><%=h family.last_login_at %></td>
    <td><%=h family.current_login_ip %></td>
    <td><%=h family.last_login_ip %></td>
    <td><%= link_to 'Show', family %></td>
    <td><%= link_to 'Edit', edit_family_path(family) %></td>
    <td><%= link_to 'Destroy', family, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

